pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                sh 'mvn clean install'
            }
        }

        stage('Test'){
            steps{
                sh 'mvn test'
            }
        }
        stage('Deploy'){
            steps{
               echo "Simulacion de despliege a un servidor de aplicaciones"
            }
        }
    }
    post{
        always{
            echo " siempre se ejecutara"
        }
        sucess{
            echo "exito el pipeline paso correctamente "
        }
        failure{
            echo "hay un error en el pipeline"
        }
    }
}